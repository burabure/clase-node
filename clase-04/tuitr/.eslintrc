{
    "ecmaFeatures": {
        "blockBindings": true,
        "forOf": true,
        "arrowFunctions": true,
        "jsx": true,
        "modules": true
    },
    "rules": {
        "semi": 2,
        "no-underscore-dangle" : 0,
        "no-use-before-define" : [2, "nofunc"],
        "no-multi-spaces" : 0,
        "key-spacing": 2,
        "quotes": [2, "single", "avoid-escape"],
        "strict": 0,
        "new-cap": 1
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "amd": true,
        "mocha": true
    }
}
